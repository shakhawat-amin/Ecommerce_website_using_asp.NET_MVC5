@model Ecommerce_version2.Models.AdminForm
@{
    ViewBag.Title = "AdminForm";
}
<body style="background-image: url(../Content/images/mandalay-bay-retail-resort-shops-shopping-bags.tif);
        background-size: cover; background-position: center; background-repeat: no-repeat;">

    <div class="jumbotron-hr" style="opacity: 1">
        <h1></h1>
        <h3>What's up chayon Ahmed</h3>
        Ulala
    </div>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <h2>Login Admin</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="center-block form-horizontal">

            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => model.adminName, new { @class = "control-Label col-md-2" })
                @Html.EditorFor(model => model.adminName)

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, new { @class = "control-Label col-md-2" })
                @Html.PasswordFor(model => model.password)

            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log In" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
