@model Ecommerce_version2.user
@{
    ViewBag.Title = "AdminForm";
}
<div class="page-content">
    <div class="page-header" style="background-color: #555; padding: 30px 0px;">
        <div class="container">
            <h3 style="color: #fff;">What's up chayon Ahmed</h3>
        </div>
    </div>

    <div class="container login-form">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>Login Admin</h2>

                @using (Html.BeginForm("Index", "AdminForm", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true)


                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, "User Name", new { @class = "control-Label" })

                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Your Name" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.userpassword, "Password", new { @class = "control-Label" })
                        @Html.PasswordFor(model => model.userpassword, new { @class = "form-control", @placeholder = "Your Password" })
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Log In" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
